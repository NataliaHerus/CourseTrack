@model DataLayer.Entities.StudentEntity.Student

<h1>Інформація про студента:</h1>

<form>
    <div class="form-group">
        <label asp-for="Id" class="control-label">Номер студента:</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Ім'я':</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Прізвище:</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Пошта:</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
</form>
<a asp-action="GetAllStudents" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Повернутися назад</a>

<a asp-area="" asp-controller="CourseWork" asp-action="GetStudentCoursWorks" asp-route-id="@Model.Id" class="btn btn-primary">
    <i class="fa fa-list"></i> Переглянути курсові
</a>

