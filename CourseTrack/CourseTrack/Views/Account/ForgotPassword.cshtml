@model ForgotPasswordModel

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal account-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    <header>Відновлення паролю</header>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"].ToString()</div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"].ToString()</div>
    }

    <div class="form-group input">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        <div>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <button type="submit" style="margin-top: 15px;">Надіслати лист</button>
        </div>
    </div>
}