@model LoginViewModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal account-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    <header>Авторизація</header>

    <div class="form-group input">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        <div>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-group input">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        <div>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <button type="submit" style="margin-top: 15px;">Увійти</button>
        </div>
    </div>

    <div class="info">
        Немає акаунту? <div class="link" onclick="@("window.location.href='" + @Url.Action("register", "account") + "'");">Зареєструватись</div>
    </div>
}